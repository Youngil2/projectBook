<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>


	
	<definition name="*.*.*" template="/WEB-INF/jsp/tiles/classic.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/{1}/{2}/tiles/header.jsp" />
		<put-attribute name="side" value="/WEB-INF/jsp/{1}/{2}/tiles/side.jsp" />
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/jsp/{1}/{2}/tiles/footer.jsp" />
	</definition>	






</tiles-definitions>